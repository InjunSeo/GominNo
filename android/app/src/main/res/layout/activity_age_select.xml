<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AgeSelectActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/age10"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/purple_200"
        android:layout_marginHorizontal="30dp"
        android:layout_height="200dp">

        <TextView
            android:layout_width="match_parent"
            android:text="10대"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/age2030"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/age10"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/purple_500"
        android:layout_height="200dp">

        <TextView
            android:layout_width="match_parent"
            android:text="20대 30대"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/age4050"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/age2030"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_height="200dp">

        <TextView
            android:layout_width="match_parent"
            android:text="40대 50대"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>