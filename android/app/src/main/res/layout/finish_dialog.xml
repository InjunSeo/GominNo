<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#232323">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="287dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/finishCommentTextView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="생활속 지니를 종료 하시겠습니까?"
        android:textColor="#EEEEEE"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <TextView
        android:id="@+id/cancelTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="취소"
        android:textColor="#EEEEEE"
        android:textSize="18sp"
        android:paddingVertical="5dp"
        app:layout_constraintEnd_toStartOf="@id/finishTextView"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/finishCommentTextView" />

    <TextView
        android:id="@+id/finishTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="종료"
        android:textColor="#EEEEEE"
        android:textSize="18sp"
        android:paddingVertical="5dp"
        app:layout_constraintBottom_toBottomOf="@id/cancelTextView"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        app:layout_constraintStart_toEndOf="@id/cancelTextView"
        app:layout_constraintTop_toTopOf="@id/cancelTextView" />
    <!---->
</androidx.constraintlayout.widget.ConstraintLayout>